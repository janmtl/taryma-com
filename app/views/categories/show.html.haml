%h1= @category.name
%table.table.table-bordered.table-striped
  %tbody
    %tr
      %td Name
      %td= @category.name
    %tr
      %td Position
      %td= @category.position
.btn-group
  = link_to '<i class="icon-pencil"></i> Edit category'.html_safe, edit_category_path(@category), {:class => 'btn'}
  = link_to '<i class="icon-remove-circle"></i> Delete category'.html_safe, category_path(@category), {:confirm => 'Are you sure?', :method => :delete, :class => 'btn'}
  = link_to 'Return to category management'.html_safe, categories_path, {:class => 'btn'}