= form_tag(sessions_path, :html => {:class => 'form-horizontal'}) do |f|
  .form-inputs
    .control-group.string.required
      %label.string.required.control-label{:for => :username}
        %abbr{:title => 'required'} *
        Username
      .controls
        = text_field_tag :username, params[:username], {:class => 'string required'}

    .control-group.password.required
      %label.password.required.control-label{:for => :password}
        %abbr{:title => 'required'} *
        Password
      .controls
        = password_field_tag :password, nil, :class => 'password required'

    .control-group.boolean.optional
      %label.boolean.optional.control-label{:for => :remember_me}
        Remember me
      .controls
        = check_box_tag :remember_me, 1, params[:remember_me], {:class => 'boolean optional'}

  .form-actions
    = submit_tag "Log in", {:class => 'btn btn-primary btn-large'}
    = link_to '<i class="icon-remove"></i> Cancel'.html_safe, root_url, {:class => 'btn btn-large'}

