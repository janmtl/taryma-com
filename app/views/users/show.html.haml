%h1= @user.username
%table.table.table-bordered.table-striped
  %tbody
    %tr
      %td Username
      %td= @user.username

.btn-group
  = link_to '<i class="icon-pencil"></i> Edit user'.html_safe, edit_user_path(@user), {:class => 'btn'}
  = link_to '<i class="icon-remove-circle"></i> Delete user'.html_safe, user_path(@user), {:confirm => 'Are you sure?', :method => :delete, :class => 'btn'}
  = link_to 'Return to user management'.html_safe, users_path, {:class => 'btn'}