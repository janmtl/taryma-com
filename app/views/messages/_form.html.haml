= simple_form_for(@message, :html => {:class => 'form-horizontal' }) do |f|
  = f.error_notification

  .form-inputs
    = f.input :from
    = f.input :email
    = f.input :content, :label => 'Message'
    = f.input :read, :as => :hidden, :input_html => { :value => false }
    = f.input :date_created, :as => :hidden, :input_html => { :value => DateTime.now }

  .form-actions
    = f.button :submit, "Send message", {:class => 'btn btn-primary'}
